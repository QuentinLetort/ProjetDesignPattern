<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="843.0" prefWidth="1136.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.insightr.gildedrose.InventoryController">

    <TableView fx:id="itemTable" layoutX="14.0" layoutY="14.0" prefHeight="600.0" prefWidth="500.0">
        <columns>
            <TableColumn prefWidth="300.0" text="Name">
                <cellValueFactory>
                    <PropertyValueFactory property="name" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="100.0" text="SellIn">
                <cellValueFactory>
                    <PropertyValueFactory property="sellIn" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="100.0" text="Quality">
                <cellValueFactory>
                    <PropertyValueFactory property="quality" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <Button layoutX="195.0" layoutY="624.0" onAction="#onUpdate" text="Update" />
    <Button layoutX="101.0" layoutY="624.0" mnemonicParsing="false" onAction="#onLoad" text="Load File" />
    <PieChart fx:id="pieChart" layoutX="523.0" layoutY="14.0" />
   <BarChart fx:id="barChart" layoutX="574.0" layoutY="465.0" prefHeight="361.0" prefWidth="552.0">
     <xAxis>
       <CategoryAxis side="BOTTOM" />
     </xAxis>
     <yAxis>
       <NumberAxis side="LEFT" />
     </yAxis>
   </BarChart>

</AnchorPane>
