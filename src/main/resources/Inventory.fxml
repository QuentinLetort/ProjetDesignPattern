<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.insightr.gildedrose.InventoryController">

    <TableView fx:id="itemTable" layoutX="14.0" layoutY="14.0" prefHeight="600.0" prefWidth="500.0">
        <columns>
            <TableColumn fx:id="itemName" prefWidth="300.0" text="Name">
                <cellValueFactory>
                    <PropertyValueFactory property="name"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="itemSellIn" prefWidth="100.0" text="SellIn">
                <cellValueFactory>
                    <PropertyValueFactory property="sellIn"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="itemQuality" prefWidth="100.0" text="Quality">
                <cellValueFactory>
                    <PropertyValueFactory property="quality"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <Button fx:id="btnUpdate" layoutX="230.0" layoutY="624.0" onAction="#onUpdate" text="Update"/>
    <Button layoutX="101.0" layoutY="624.0" mnemonicParsing="false" text="Load File"/>

</AnchorPane>
